{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./dist",
      "baseUrl": "./",
      "types": ["node", "jest"],
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "target": "es2017",
      "sourceMap": true,
      "incremental": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true 
    },
    "include": ["src/**/*"]
  }
  