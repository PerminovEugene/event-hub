{
    "extends": "../../tsconfig.build.json",
    "compilerOptions": {
        "rootDir": "src",
        "baseUrl": "./",
        "outDir": "./dist",
        "types": ["node"],
        "declaration": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "target": "es2017",
        "sourceMap": true,
        "incremental": true
    },
    "include": ["./src/**/*"],
    "exclude": [
      "node_modules",
      "./src/**/*.test.*",
      "./src/webpack.dev.client.config.starter.js",
      "./src/framework/build/setupEnzyme.ts"
    ],
    // "extends": "../../tsconfig.json",
  
    "rules": {
      "ordered-imports": [false]
    }
  }
  
