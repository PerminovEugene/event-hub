{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "allowJs": true,
    "lib": ["es2015", "es2017", "dom", "esnext.asynciterable"],
    "moduleResolution": "node",
    "removeComments": false,
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": true,
    "module": "commonjs",
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./src/**/*.test.*", "./src/**/server/**"]
}
